# i3 config file (v4)

font pango:monospace 8
floating_modifier DEFAULT_I3_MODIFIER
new_window pixel 3

bindsym DEFAULT_I3_MODIFIER+Shift+q kill
bindsym DEFAULT_I3_MODIFIER+f fullscreen toggle
bindsym DEFAULT_I3_MODIFIER+Shift+space floating toggle

bindsym DEFAULT_I3_MODIFIER+DEFAULT_I3_UP focus up
bindsym DEFAULT_I3_MODIFIER+DEFAULT_I3_DOWN focus down
bindsym DEFAULT_I3_MODIFIER+DEFAULT_I3_LEFT focus left
bindsym DEFAULT_I3_MODIFIER+DEFAULT_I3_RIGHT focus right

bindsym DEFAULT_I3_MODIFIER+Up focus up
bindsym DEFAULT_I3_MODIFIER+Down focus down
bindsym DEFAULT_I3_MODIFIER+Left focus left
bindsym DEFAULT_I3_MODIFIER+Right focus right

bindsym DEFAULT_I3_MODIFIER+Shift+DEFAULT_I3_UP move up
bindsym DEFAULT_I3_MODIFIER+Shift+DEFAULT_I3_DOWN move down
bindsym DEFAULT_I3_MODIFIER+Shift+DEFAULT_I3_LEFT move left
bindsym DEFAULT_I3_MODIFIER+Shift+DEFAULT_I3_RIGHT move right

bindsym DEFAULT_I3_MODIFIER+Shift+Up move up
bindsym DEFAULT_I3_MODIFIER+Shift+Down move down
bindsym DEFAULT_I3_MODIFIER+Shift+Left move left
bindsym DEFAULT_I3_MODIFIER+Shift+Right move right

bindsym DEFAULT_I3_MODIFIER+g split h
bindsym DEFAULT_I3_MODIFIER+v split v

bindsym DEFAULT_I3_MODIFIER+s layout stacking
bindsym DEFAULT_I3_MODIFIER+w layout tabbed
bindsym DEFAULT_I3_MODIFIER+e layout toggle split

bindsym DEFAULT_I3_MODIFIER+a focus parent
bindsym DEFAULT_I3_MODIFIER+space focus mode_toggle

mode "resize" {
	bindsym DEFAULT_I3_UP resize shrink height 1 px or 1 ppt
	bindsym DEFAULT_I3_DOWN resize grow height 1 px or 1 ppt
	bindsym DEFAULT_I3_LEFT resize shrink width 1 px or 1 ppt
	bindsym DEFAULT_I3_RIGHT resize grow width 1 px or 1 ppt

	bindsym Up resize shrink height 1 px or 1 ppt
	bindsym Down resize grow height 1 px or 1 ppt
	bindsym Left resize shrink width 1 px or 1 ppt
	bindsym Right resize grow width 1 px or 1 ppt

	bindsym Escape mode "default"
}
bindsym DEFAULT_I3_MODIFIER+r mode "resize"

bindsym DEFAULT_I3_MODIFIER+Shift+c reload
bindsym DEFAULT_I3_MODIFIER+Shift+r restart

bindsym DEFAULT_I3_MODIFIER+Return exec "i3-sensible-terminal"
bindsym DEFAULT_I3_MODIFIER+0 exec "DEFAULT_BROWSER"
bindsym DEFAULT_I3_MODIFIER+6 exec "xrandr --output VGA-1 --1280x720"
bindsym DEFAULT_I3_MODIFIER+7 exec "xrandr --output VGA-1 --1366x768"
bindsym DEFAULT_I3_MODIFIER+8 exec "xrandr --output VGA-1 --1920x1080"
bindsym DEFAULT_I3_MODIFIER+9 exec "xrandr --output VGA-1 --auto"
bindsym DEFAULT_I3_MODIFIER+Shift+e exec "i3-msg exit"

bindsym DEFAULT_I3_MODIFIER+1 workspace 1
bindsym DEFAULT_I3_MODIFIER+2 workspace 2
bindsym DEFAULT_I3_MODIFIER+3 workspace 3
bindsym DEFAULT_I3_MODIFIER+4 workspace 4

bindsym DEFAULT_I3_MODIFIER+Shift+1 move container to workspace 1
bindsym DEFAULT_I3_MODIFIER+Shift+2 move container to workspace 2
bindsym DEFAULT_I3_MODIFIER+Shift+3 move container to workspace 3
bindsym DEFAULT_I3_MODIFIER+Shift+4 move container to workspace 4

bar {
	mode hide
	hidden_state hide
	modifier DEFAULT_I3_MODIFIER
}
