#!/bin/sh

set -e

test -x /usr/bin/firefox

if ! test -f "$HOME/.mozilla/firefox/defaultUser/prefs.js" && test -f "$HOME/user.js"; then
  /usr/bin/firefox -CreateProfile "defaultUser $HOME/.mozilla/firefox/defaultUser"
  cp "$HOME/user.js" "$HOME/.mozilla/firefox/defaultUser"
fi

exec /usr/bin/firefox -P defaultUser
